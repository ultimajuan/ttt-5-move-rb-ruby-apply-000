#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here

puts "Welcome to Tic Tac Toe!"
puts "Where would you like to go?"
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
user_move = gets.strip
new_index = input_to_index(user_move)
move(board, new_index)
display_board(board)